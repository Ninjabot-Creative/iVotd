<%= form_for(@poll) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Poll Title:" %><br>
    <%= f.text_field :title %>
  </div>

  <%= f.fields_for :candidates do |builder| %>  
  <div>  
    <%= builder.label "Candidate:" %><br />  
    <%= builder.text_field :title %>
    <% #builder.check_box :_destroy %>  
    <% #builder.label :_destroy, "Remove Candidate" %> 
  </div>
  <% end %>  

  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
